blender_package_url=mirrors.ocf.berkeley.edu/blender/release/Blender4.3/blender-4.3.2-linux-x64.tar.xz
blender_path=/usr/local/blender

#Input and Output Paths
folder_input=/tmp/input
folder_output=/tmp/output
folder_python_scripts=/tmp/scripts

